{
	"include": [
		".react-router/types/**/*",
		"vite.config.ts",
		"react-router.config.ts",
		"app/**/*",
		"app/**/.server/**/*",
		"app/**/.client/**/*",
		"types/**/*",
		"server/react-router-node"
	],
	"extends": ["./tsconfig.json"],
	"compilerOptions": {
		"composite": true,
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["vite/client"],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"rootDirs": [".", "./.react-router/types"],
		"baseUrl": ".",
		"esModuleInterop": true,
		"jsx": "preserve"
	}
}
